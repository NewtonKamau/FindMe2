<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/header_cover_image"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/rsz_1maplogo3"
        android:background="#ebca0707"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_toRightOf="@+id/header_cover_image"
            android:layout_toEndOf="@+id/header_cover_image"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:background="#fff"
            android:id="@+id/PhoneimageButton" />
        <TextView
            android:id="@+id/clickText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to Send Alert!"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginBottom="17dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />
    </RelativeLayout>


</RelativeLayout>